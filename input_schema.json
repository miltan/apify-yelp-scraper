{
  "schemaVersion": 1,
  "title": "Yelp scraper input",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "search": {
      "type": "string",
      "title": "Keyword (e.g., 'plumber')",
      "default": "plumber"
    },
    "location": {
      "type": "string",
      "title": "Location (e.g., 'San Francisco, CA')",
      "default": "San Francisco, CA"
    },
    "yelpSearchUrl": {
      "type": "string",
      "title": "Yelp search URL (overrides keyword+location)",
      "default": ""
    },
    "maxResults": {
      "type": "integer",
      "title": "Max results",
      "default": 200,
      "minimum": 1
    },
    "fetchContactsFromWebsite": {
      "type": "boolean",
      "title": "Also crawl business website to find email/phone/social",
      "default": true
    },
    "contactPagePaths": {
      "type": "array",
      "title": "Likely contact paths to try on websites",
      "items": { "type": "string" },
      "default": ["/contact", "/contact-us", "/about", "/about-us"]
    },
    "useResidentialProxy": {
      "type": "boolean",
      "title": "Use Apify residential proxies (recommended)",
      "default": true
    },
    "proxyCountryCode": {
      "type": "string",
      "title": "Proxy country code (e.g., US)",
      "default": "US",
      "minLength": 2,
      "maxLength": 2
    },
    "maxConcurrency": {
      "type": "integer",
      "title": "Max concurrency",
      "default": 5,
      "minimum": 1
    },
    "debugScreenshots": {
      "type": "boolean",
      "title": "Save screenshots on block/captcha",
      "default": true
    }
  },
  "required": []
}